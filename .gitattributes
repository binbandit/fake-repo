# Line ending handling
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Windows specific files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Diff patterns
*.json diff=json
*.md diff=markdown

# Export ignore (files to exclude from archive)
.gitattributes export-ignore
.gitignore export-ignore
tests/ export-ignore
docs/ export-ignore

# Merge strategies
package-lock.json merge=ours
yarn.lock merge=ours